<div class="container">
  <h1>The Complaints Department</h1>

  <div class="row">
    <div class="col s12">
      <%= link_to 'Make a Complaint', new_complaint_path, class:"waves-effect waves-light btn red darken-4"  %>
    </div>
  </div>

  <div class="row">
    <h2>Complaints</h2>
    <table class="responsive-table">
      <tr>
        <th>To</th>
        <th>Complaint</th>
        <th>From</th>
      </tr>

      <% @complaints.each do |complaint| %>
        <tr>
          <td><%= complaint.to %></td>
          <td><%= complaint.text %></td>
          <td><%= complaint.from %></td>
        </tr>
      <% end %>
    </table>

    <%= will_paginate @complaints %>
  </div>
</div>